<Window x:Class="NewTrade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewTrade"
        xmlns:vms="clr-namespace:ShopViewModels;assembly=ShopViewModels"
        xmlns:vs="clr-namespace:NewTrade.Views"
        mc:Ignorable="d"
        Title="Не знаю как тут отобразить заголовок текущей VM"
        Height="450"
        Width="800"
        FontSize="18"
        WindowStartupLocation="CenterScreen"
        DataContext="{StaticResource locator}"
        Content="{Binding CurrentViewModel}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:LoginViewModel}">
            <vs:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:ProductsViewModel}">
            <vs:ProductsView />
        </DataTemplate>
    </Window.Resources>
</Window>
