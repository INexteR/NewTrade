<Application x:Class="NewTrade.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NewTrade"
             xmlns:vms="clr-namespace:ShopViewModels;assembly=ShopViewModels"
             xmlns:m="clr-namespace:ShopModel;assembly=ShopModel"
             StartupUri="MainWindow.xaml"
             Startup="OnAppStartup">
    <Application.Resources>
        <local:LocatorApp x:Key="locator">
            <local:LocatorApp.Authorization>
                <vms:LoginViewModel/>
            </local:LocatorApp.Authorization>
        </local:LocatorApp>
        <!--Нельзя UI элементы передавать через ресурсы !!!!
        <Image Source="/Resources/logo.png"
               x:Key="logo"
               x:Shared="False" />-->
        <ImageSource x:Key="logo">/Resources/logo.png</ImageSource>
    </Application.Resources>
</Application>
